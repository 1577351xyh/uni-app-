								"fontSrc":"/static/font/iconfont.ttf",
								"text":"\ue606"
							},
							//右边
							{
								"color":"#000000",
								"colorPressed":"#888888",
								"float":"right",
								"fontSize":"22px",
								"fontSrc":"/static/font/iconfont.ttf",
								"text":"\ue61d"
							}
						]
					}
				
				}
			}
		}
        ,{
            "path" : "pages/my/my",
